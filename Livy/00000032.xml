        <marginalia hand="Italian">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Techna hypocritica. Sic Euander venerabilis miraculo rei nova[e]. s[upr]a /
                    </marginalia_text>
                    <person name="Evander"/>
